<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Platform.Theme.Coca" parent="android:Theme.Material.Light" />

    <style name="Base.Theme.Coca" parent="Platform.Theme.Coca">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Coca" parent="Base.Theme.Coca">
    </style>

    <style name="Theme.Coca.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Coca.Immerse" parent="Theme.Coca.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_nav_bar</item>
    </style>

    <style name="Theme.Coca.Home" parent="Theme.Coca.Immerse">
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
    </style>
</resources>
